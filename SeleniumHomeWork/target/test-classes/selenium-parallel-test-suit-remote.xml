<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Parallel Remote Testing Suite" parallel="tests">
    <test name="Parallel Remote Tests on chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="org.it_academy.selenium.onliner.remote.RemoteSeleniumTest"/>
        </classes>
    </test>
    <test name="Parallel Remote Tests on firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="org.it_academy.selenium.onliner.remote.RemoteSeleniumTest"/>
        </classes>
    </test>
</suite>